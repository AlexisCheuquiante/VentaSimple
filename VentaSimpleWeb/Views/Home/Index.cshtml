</head>
<body>
    <div class="ui link cards">
        <div class="container">
            <div style="height:5px"></div>
            @if (Request.Browser.IsMobileDevice)
            {
                <h2 style="color:white" class="ui center aligned header">
                    @*<img src="~/Recursos/Imagenes/LogoBackline.png" class="ui image">*@
                    Bienvenido al sistema de venta simple @Model.NombreUsuario
                </h2>
            }
            else
            {
                <h2 style="color:white" class="ui center aligned header">
                    <img src="~/Recursos/Imagenes/LogoBackline.png" class="ui image">
                    Bienvenido al sistema de venta simple @Model.NombreUsuario
                </h2>
            }
        <div class="row">
            @if (SessionH.Usuario.Administrador == false)
            {
                @*GeneraVenta*@
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm" style="opacity:1">
                        <img class="card-img-top" src="~/Recursos/Imagenes/botonGeneraVenta2.png" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">Aquí podrás generar nuevas ventas.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <div id="btnMarketPlace" onclick="window.location.href = '/GeneraVenta'" class="ui right labeled icon purple  button">
                                        Generar venta
                                        <i class="hand point left icon"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @*Libro de ventas*@
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="opacity:1">
                    <img class="card-img-top" src="~/Recursos/Imagenes/botonRevisaSolicitudes.jpg" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">Aquí podrás revisar las ventas diarias.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <div id="btnMarketPlace" onclick="window.location.href = '/LibroVentas?limpiar=1'" class="ui right labeled icon purple button">
                                    Libro de ventas
                                    <i class="hand point left icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @if (SessionH.Usuario.Administrador == true)
            {
                @*Mantenedor de usuarios*@
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm" style="opacity:1">
                        <img class="card-img-top" src="~/Recursos/Imagenes/botonMantenedorUsuarios.png" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">Aquí podrás crear o eliminar los usuarios existentes.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <div id="btnMarketPlace" onclick="window.location.href = '/MantenedorUsuarios'" class="ui right labeled icon purple button">
                                        Mantenedor de usuarios
                                        <i class="hand point left icon"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        </div>
    </div>
</body>
